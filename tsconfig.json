{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2015",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "lib": ["ESNext", "DOM"],
    "types": ["jest"],
    "rootDir": ".",
    "paths": {
      "@tracing/*": ["packages/*/src"]
    }
  },
  "include": ["global.d.ts", "packages/*/src/", "test-utils/*"],
  "exclude": ["scripts/*.ts", "playground/*", "packages/*/dist/*"],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
}
