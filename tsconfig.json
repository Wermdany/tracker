{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2015",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "types": [],
    "rootDir": ".",
    "paths": {
      "@tracker/*": ["packages/*/src"]
    }
  },
  "include": ["global.d.ts", "packages/*/src/**/*.ts"],
  "exclude": [
    "packages/**/*.test.ts",
    "packages/**/*.spec.ts",
    "scripts/*.ts",
    "packages/example/*",
    "packages/*/dist/*"
  ],
  "references": [
    {
      "path": "./tsconfig.build.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
